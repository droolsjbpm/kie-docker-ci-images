<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kie.docker</groupId>
    <artifactId>kie-docker-ci-images</artifactId>
    <version>6.4.0-SNAPSHOT</version>
  </parent>

  <artifactId>uf-dashbuilder</artifactId>
  <packaging>jar</packaging>
  <name>UF Dashbuilder :: Docker integration</name>

  <dependencies>

    <dependency>
      <groupId>org.dashbuilder</groupId>
      <artifactId>dashbuilder-distros</artifactId>
      <type>war</type>
      <classifier>wildfly8</classifier>
    </dependency>

    <dependency>
      <groupId>org.dashbuilder</groupId>
      <artifactId>dashbuilder-distros</artifactId>
      <type>war</type>
      <classifier>eap6_4</classifier>
    </dependency>

    <dependency>
      <groupId>org.dashbuilder</groupId>
      <artifactId>dashbuilder-distros</artifactId>
      <type>war</type>
      <classifier>tomcat7</classifier>
    </dependency>

    <!--
        Dependencies for deploying into Tomcat7 shared library. 
    -->
    <dependency>
      <groupId>org.codehaus.btm</groupId>
      <artifactId>btm</artifactId>
    </dependency>

    <dependency>
      <groupId>org.codehaus.btm</groupId>
      <artifactId>btm-tomcat55-lifecycle</artifactId>
    </dependency>

    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jboss.spec.javax.transaction</groupId>
      <artifactId>jboss-transaction-api_1.1_spec</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jboss.spec.javax.security.jacc</groupId>
      <artifactId>jboss-jacc-api_1.4_spec</artifactId>
    </dependency>

    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
    </dependency>

    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
    </dependency>

    <dependency>
      <groupId>org.kie.docker</groupId>
      <artifactId>kie-jboss-modules</artifactId>
      <version>${project.version}</version>
      <classifier>wildfly-mysql</classifier>
      <type>tar.gz</type>
    </dependency>

    <dependency>
      <groupId>org.kie.docker</groupId>
      <artifactId>kie-jboss-modules</artifactId>
      <version>${project.version}</version>
      <classifier>wildfly-postgres</classifier>
      <type>tar.gz</type>
    </dependency>

    <dependency>
      <groupId>org.kie.docker</groupId>
      <artifactId>kie-jboss-modules</artifactId>
      <version>${project.version}</version>
      <classifier>eap-mysql</classifier>
      <type>tar.gz</type>
    </dependency>

    <dependency>
      <groupId>org.kie.docker</groupId>
      <artifactId>kie-jboss-modules</artifactId>
      <version>${project.version}</version>
      <classifier>eap-postgres</classifier>
      <type>tar.gz</type>
    </dependency>

  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/docker</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <!-- Generate site report for dependencies for including it into the generated docker image. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <finalName>uf-dashbuilder</finalName>
        </configuration>
        <executions>
          <execution>
            <id>generate-report</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.jolokia</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <images>
            <!-- UF Dashbuilder latest SNAPSHOT & Wildfly 8.1.0.Final. -->
            <image>
              <name>${docker.kie.repository}/uf-dashbuilder-wildfly8:${docker.build.dashbuilder.tag}</name>
              <alias>uf-dashbuilder-wildfly8-${docker.build.dashbuilder.tag}</alias>
              <build>
                <assembly>
                  <dockerFileDir>${project.build.outputDirectory}/wildfly</dockerFileDir>
                  <descriptor>${pom.basedir}/src/main/assembly/assembly-dashbuilder-wildfly8.xml
                  </descriptor>
                </assembly>
              </build>
              <run>
                <namingStrategy>alias</namingStrategy>
                <env>
                  <KIE_CONNECTION_URL>"jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE"</KIE_CONNECTION_URL>
                  <KIE_CONNECTION_DRIVER>h2</KIE_CONNECTION_DRIVER>
                  <KIE_CONNECTION_USER>sa</KIE_CONNECTION_USER>
                  <KIE_CONNECTION_PASSWORD>sa</KIE_CONNECTION_PASSWORD>
                  <KIE_CONNECTION_DATABASE>kie</KIE_CONNECTION_DATABASE>
                </env>
                <ports>
                  <port>dashbuilder.wf8.http.port:8080</port>
                </ports>
                <wait>
                  <log>Deployed "dashbuilder\.war"</log>
                  <time>${docker.run.timeout}</time>
                </wait>
                <log>
                  <prefix>DEMO</prefix>
                  <date>ISO8601</date>
                  <color>blue</color>
                </log>
              </run>
            </image>
            <!-- UF Dashbuilder latest SNAPSHOT & JBoss EAP 6.4. -->
            <image>
              <name>${docker.kie.repository}/uf-dashbuilder-eap64:${docker.build.dashbuilder.tag}</name>
              <alias>uf-dashbuilder-eap64-${docker.build.dashbuilder.tag}</alias>
              <build>
                <assembly>
                  <dockerFileDir>${project.build.outputDirectory}/eap</dockerFileDir>
                  <descriptor>${pom.basedir}/src/main/assembly/assembly-dashbuilder-eap64.xml
                  </descriptor>
                </assembly>
              </build>
              <run>
                <namingStrategy>alias</namingStrategy>
                <env>
                  <KIE_CONNECTION_URL>jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE</KIE_CONNECTION_URL>
                  <KIE_CONNECTION_DRIVER>h2</KIE_CONNECTION_DRIVER>
                  <KIE_CONNECTION_USER>sa</KIE_CONNECTION_USER>
                  <KIE_CONNECTION_PASSWORD>sa</KIE_CONNECTION_PASSWORD>
                  <KIE_CONNECTION_DATABASE>kie</KIE_CONNECTION_DATABASE>
                </env>
                <ports>
                  <port>dashbuilder.eap64.http.port:8080</port>
                </ports>
                <wait>
                  <log>Deployed "dashbuilder\.war"</log>
                  <time>${docker.run.timeout}</time>
                </wait>
                <log>
                  <prefix>DEMO</prefix>
                  <date>ISO8601</date>
                  <color>blue</color>
                </log>
              </run>
            </image>
            <!-- UF Dashbuilder latest SNAPSHOT & Tomcat7. -->
            <image>
              <name>${docker.kie.repository}/uf-dashbuilder-tomcat7:${docker.build.dashbuilder.tag}</name>
              <alias>uf-dashbuilder-tomcat7-${docker.build.dashbuilder.tag}</alias>
              <build>
                <assembly>
                  <dockerFileDir>${project.build.outputDirectory}/tomcat</dockerFileDir>
                  <descriptor>${pom.basedir}/src/main/assembly/assembly-dashbuilder-tomcat7.xml
                  </descriptor>
                </assembly>
              </build>
              <run>
                <namingStrategy>alias</namingStrategy>
                <env>
                  <KIE_CONNECTION_URL>jdbc:h2:file:~/jbpm</KIE_CONNECTION_URL>
                  <KIE_CONNECTION_DRIVER>h2</KIE_CONNECTION_DRIVER>
                  <KIE_CONNECTION_USER>sa</KIE_CONNECTION_USER>
                  <!-- Empty password by default. -->
                  <!--<KIE_CONNECTION_PASSWORD></KIE_CONNECTION_PASSWORD>-->
                  <KIE_CONNECTION_DATABASE>kie</KIE_CONNECTION_DATABASE>
                </env>
                <ports>
                  <port>dashbuilder.t7.http.port:8080</port>
                </ports>
                <wait>
                  <log>Deployment of web application directory \/usr\/local\/tomcat\/webapps\/dashbuilder has finished in</log>
                  <time>${docker.run.timeout}</time>
                </wait>
                <log>
                  <prefix>DEMO</prefix>
                  <date>ISO8601</date>
                  <color>blue</color>
                </log>
              </run>
            </image>
          </images>
        </configuration>
        <executions>
          <execution>
            <id>dashbuilder-build</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>build</goal>
            </goals>
          </execution>
          <execution>
            <id>dashbuilder-start</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
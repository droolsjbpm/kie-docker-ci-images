<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <dependencySets>
    <!-- The war to include into docker container. -->
    <dependencySet>
      <includes>
        <include>org.kie:${kie.docker.drools-wb.wildfly8.artifactId}:war:wildfly8</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <outputFileNameMapping>kie-drools-wb.war</outputFileNameMapping>
    </dependencySet>
    <!-- The MySQL database module to include into docker container. -->
    <dependencySet>
      <includes>
        <include>org.kie.docker:kie-jboss-modules:tar.gz:wildfly-mysql</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>./modules</outputDirectory>
      <outputFileNameMapping>kie-wildfly-mysql-module.tar.gz</outputFileNameMapping>
    </dependencySet>
    <!-- The PostgreSQL database module to include into docker container. -->
    <dependencySet>
      <includes>
        <include>org.kie.docker:kie-jboss-modules:tar.gz:wildfly-postgres</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>./modules</outputDirectory>
      <outputFileNameMapping>kie-wildfly-postgres-module.tar.gz</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

  <!-- The generated maven site as a webapp. -->
  <componentDescriptors>
    <componentDescriptor>${kie.docker.drools-wb-base.path}/assembly/assembly-site.xml</componentDescriptor>
  </componentDescriptors>
  
</assembly>